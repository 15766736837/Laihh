<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/rlDelete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivDeleteVote"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_delete_vote"
            android:padding="5dp"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/ivDeleteVote"
            android:layout_centerVertical="true"
            android:src="@mipmap/add_img"
            android:visibility="gone"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivDeleteVote"
            android:background="@null"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:hint="请输入第一项（30个字以内）"
            android:maxLength="30"
            android:textSize="14sp"
            android:textColor="@color/color_303133"
            android:textColorHint="@color/color_CCCCCC"
            android:layout_marginRight="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorDivider"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAdd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAddVote"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_add_vote"
            android:padding="5dp"
            android:layout_marginLeft="16dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivAddVote"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:text="添加选项（最多10项）"
            android:gravity="center_vertical"
            android:textColor="@color/textPrimary"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
</FrameLayout>