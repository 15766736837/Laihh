<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.AddVoteActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="38dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="创建投票"
                android:textColor="@color/color_303133"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础信息"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/textPrimary"/>

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:hint="投票标题（最多30个字符）"
                android:textSize="14sp"
                android:maxLength="30"
                android:paddingHorizontal="16dp"
                android:textColor="@color/color_303133"
                android:textColorHint="@color/color_CCCCCC"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDivider"/>

            <EditText
                android:id="@+id/etDescribe"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:hint="补充描述（选填）"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/color_303133"
                android:textColorHint="@color/color_CCCCCC"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/ivImg"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/add_img"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片选填"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项设置"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/textPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图文投票"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_centerVertical="true"/>

                <com.example.androiddemo.widget.SwitchButton
                    android:id="@+id/sbImg"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:sb_checked_color="@color/colorPrimary"
                    app:sb_show_indicator="false"
                    tools:visibility="visible" />
            </RelativeLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间设置"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/textPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="选择截止日期"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColorHint="@color/color_878A99"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/textPrimary"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高级设置"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/textPrimary"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="允许多选"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_centerVertical="true"/>

                <com.example.androiddemo.widget.SwitchButton
                    android:id="@+id/sbMultipleChoice"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:sb_checked_color="@color/colorPrimary"
                    app:sb_show_indicator="false"
                    tools:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorDivider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最少要选"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_centerVertical="true"/>

                <com.example.androiddemo.widget.AmountView
                    android:id="@+id/avMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvMinAmountRight"/>

                <TextView
                    android:id="@+id/tvMinAmountRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个选项"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_878A99"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorDivider"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlMax"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最多可选"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:layout_centerVertical="true"/>

                <com.example.androiddemo.widget.AmountView
                    android:id="@+id/avMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tvAmountRight"/>

                <TextView
                    android:id="@+id/tvAmountRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个选项"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_878A99"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorDivider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:text="选择投票用户"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="全选"
                    android:textSize="14sp"
                    android:textColor="@color/color_878A99"
                    android:gravity="center_vertical"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/selector_login_btn"
                android:enabled="true"
                android:text="确定"
                android:layout_marginBottom="30dp"
                android:textColor="#FFFFFF" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>