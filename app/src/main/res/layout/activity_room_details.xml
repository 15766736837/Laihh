<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="38dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预约详情"
                android:textColor="@color/color_303133"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llTitle"
        android:layout_above="@id/btnSubmit">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="基础信息"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/color_303133"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自习室名字"
                    android:textSize="14sp"
                    android:textColor="@color/color_1A1818"/>

                <TextView
                    android:id="@+id/roomName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="自习室名字"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/color_303133"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自习室描述"
                    android:textSize="14sp"
                    android:textColor="@color/color_1A1818"/>

                <TextView
                    android:id="@+id/tvDescribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自习室的描述信息"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_909399"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预约信息"
                android:paddingLeft="16dp"
                android:paddingVertical="10dp"
                android:textSize="14sp"
                android:background="@color/colorBg"
                android:textColor="@color/color_303133"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/color_303133"/>

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="选择开始日期"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColorHint="@color/color_878A99"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_303133"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/color_303133"/>

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="选择结束日期"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColorHint="@color/color_878A99"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_303133"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自习室区域"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/color_303133"/>

                <TextView
                    android:id="@+id/tvRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="选择自习室区域"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColorHint="@color/color_878A99"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_303133"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自习室位置"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="@color/color_303133"/>

                <TextView
                    android:id="@+id/tvSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="选择自习室位置"
                    android:gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColorHint="@color/color_878A99"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_303133"/>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivCode"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:scaleType="fitXY"
                android:visibility="gone"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_login_btn"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:text="确定预约"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>