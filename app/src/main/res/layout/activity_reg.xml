<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="234dp"
        android:background="@mipmap/img_login_bg" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="54dp"
        android:padding="2dp"
        android:src="@mipmap/icon_nav_back_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBack"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="18dp"
        android:text="账号注册"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="196dp"
        android:background="@drawable/shape_top_white_rounded_40"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_login_tab_round_8"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="88dp"
                android:layout_height="26dp"
                android:background="@drawable/shape_account_type_selected"
                android:gravity="center"
                android:text="用户"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAdmin"
                android:layout_width="88dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="管理员"
                android:textColor="#262936"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnReg"
            android:layout_below="@id/rl_tab">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/shape_login_edittext_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="班级: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etClass"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:hint="请输入班级"
                        android:background="@null"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_login_edittext_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etStudentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/shape_login_edittext_bg"
                        android:hint="请输入学号"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_login_edittext_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etStudentName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_login_edittext_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-*"
                        android:hint="请输入账号"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_login_edittext_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录密码: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etPwd"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-*"
                        android:hint="输入登录密码"
                        android:inputType="textPassword"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_login_edittext_bg"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认登录密码: "
                        android:paddingLeft="20dp"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etConfirmPwd"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-*"
                        android:hint="再次输入登录密码"
                        android:inputType="textPassword"
                        android:paddingLeft="16dp"
                        android:textColor="@color/color_303133"
                        android:textColorHint="@color/color_CCCCCC"
                        android:textSize="14sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btnReg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_login_btn"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="注册"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</RelativeLayout>